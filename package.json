{
	"name": "create-smithery",
	"version": "1.1.0",
	"description": "The CLI for creating MCP servers with Smithery",
	"main": "dist/index.js",
	"bin": {
		"create-smithery": "dist/index.js"
	},
	"type": "module",
	"scripts": {
		"prepare": "bun run build",
		"build": "bun build ./index.ts --outdir dist --target node --minify",
		"start": "rm -rf my-smithery-app && bun run build && node dist/index.js",
		"check": "biome check --write --unsafe",
		"test": "vitest"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@types/bun": "^1.3.0",
		"@types/inquirer": "^9.0.8",
		"@types/node": "^22.15.29",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"boxen": "^8.0.1",
		"chalk": "^5.4.1",
		"cli-spinners": "^3.3.0",
		"commander": "^14.0.0",
		"execa": "^9.6.0",
		"inquirer": "^12.6.3",
		"ora": "^9.0.0"
	}
}
